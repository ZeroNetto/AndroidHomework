<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/linearLayout_habit_field"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical">

    <TextView
        android:id="@+id/listElement_habit_name_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/listElement_attribute"/>

    <TextView
        android:id="@+id/listElement_habit_description_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/listElement_attribute"/>

    <TextView
        android:id="@+id/listElement_habit_priority_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/listElement_attribute"/>

    <TextView
        android:id="@+id/listElement_habit_done_count_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/listElement_attribute"/>

    <TextView
        android:id="@+id/listElement_habit_periodicity_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/listElement_attribute"/>
</LinearLayout>
